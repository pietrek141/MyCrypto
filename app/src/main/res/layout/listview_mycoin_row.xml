<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_myCoinList_row_coinSymbol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/string_coinName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="32sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textview_myCoinList_row_coinPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/string_coinName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textview_myCoinList_row_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/string_coinName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>

        <ImageButton
            android:id="@+id/button_delete_from_MyCrypto"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:focusable="false"
            android:src="@android:drawable/ic_delete" />
    </LinearLayout>
</LinearLayout>

</android.support.constraint.ConstraintLayout>


